{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "#mdx-config": ["./mdx.config.mjs"],
      "#velite": ["./.velite/"],
      "#/*": ["./src/*"]
    }
  },
  // "src/components/shortcodes/BlockQuote",
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts", 
    ".velite/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
